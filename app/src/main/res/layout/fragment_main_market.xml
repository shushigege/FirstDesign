<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".shopping.MainMarketFragment">
    <androidx.appcompat.widget.Toolbar
        android:background="@color/gray"
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:layout_scrollFlags="scroll|enterAlways|snap">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:text="超市精选"/>
    </androidx.appcompat.widget.Toolbar>
<LinearLayout
    android:layout_below="@id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
<LinearLayout
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:orientation="vertical"
            android:background="#7E51C0FB">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CD51C0FB"
        >
        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textStyle="bold"
            android:text="   菜  单"
            android:textColor="@color/gray"
            android:layout_gravity="center_vertical"
            android:textSize="20sp"
            />
    </LinearLayout>



<TextView
                android:id="@+id/tv_wash_market"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:text="洗漱用品"
                android:textSize="20sp" />

<TextView
                android:id="@+id/tv_study_market"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center_horizontal"
                android:text="学习文具"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/tv_phone_market"
                android:layout_width="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_height="40dp"
                android:text="电子产品"
                android:layout_gravity="center_horizontal"
                android:textSize="20sp"/>
<TextView
                android:id="@+id/tv_food_market"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="零  食"
                android:layout_gravity="center_horizontal"
                android:textSize="20sp"/>
<TextView
                android:id="@+id/tv_else_market"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="其  他"
                android:layout_gravity="center_horizontal"
                android:textSize="20sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#C1FFFFFF"/>
</LinearLayout>
<LinearLayout
            android:id="@+id/fragment_mark_show"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--            展示上方的fragement-->
            <androidx.viewpager.widget.ViewPager
                android:id="@+id/layout_icon_market"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffff"
                android:orientation="vertical"></androidx.viewpager.widget.ViewPager>
</LinearLayout>
</LinearLayout>
</RelativeLayout>